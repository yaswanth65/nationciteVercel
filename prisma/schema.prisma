generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")   
}

// ENUMS

enum PersonType {
  DOCTOR
  RESEARCHER
}

enum OrganizationType {
  HOSPITAL
  CLINIC
  INSTITUTE
  UNIVERSITY
  ORGANIZATION
  RESEARCH_LAB
}

// MODELS

model Person {
  id             Int          @id @default(autoincrement())
  name           String
  hIndex         Int
  personType     PersonType
  specialization String?       // only relevant for doctors; optional
  field          String?       // only for researchers; optional

  // Relations
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Indexes for fast queries
  @@index([hIndex])
  @@index([organizationId])
  @@index([personType])
}

model Organization {
  id          Int              @id @default(autoincrement())
  name        String
  hIndex      Int
  orgType     OrganizationType
  location    String?           // City / State / Country if needed
  website     String?

  // Relations
  people      Person[]

  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Indexes
  @@index([hIndex])
  @@index([orgType])
  @@unique([name])
}